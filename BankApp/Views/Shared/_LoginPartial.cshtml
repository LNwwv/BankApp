@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav ">
    <a class="nav-item nav-link" href="@Url.Action("Index", "Manage", routeValues: null)">Hello @User.Identity.Name !</a>
    <li><a class="nav-item nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
</ul>
    }
}
else
{
<div class="navbar-nav ">
    <a class="nav-item nav-link" href="@Url.Action("Register", "Account", routeValues: null)">Register</a>
    <a class="nav-item nav-link" href="@Url.Action("Login", "Account")">Login</a>
</div>
   
}
